<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:background="@color/refer_top_colour"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:id="@+id/relative_top_1"
            android:padding="@dimen/_15sdp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/yellow"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:text="@string/new_booking"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:drawablePadding="4dp"
                android:id="@+id/tv_count_timer"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:layout_alignParentEnd="true"

        />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/relative_top_1"
            android:layout_above="@id/linearbottom"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_15sdp"
                            android:orientation="vertical"
                            android:id="@+id/relative_top"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/btn"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/circle_shape"/>

                        <View
                                android:layout_width="3dp"
                                android:layout_height="200dp"
                                android:id="@+id/view"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="#ff9800"/>

                        <TextView
                                android:id="@+id/btn1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_below="@id/view"
                                android:background="@drawable/circle_shape"/>


                    </RelativeLayout>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_margin="@dimen/_15sdp"
                                    android:layout_height="match_parent">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:orientation="vertical"
                                      android:id="@+id/lineartop"
                                      android:layout_alignParentTop="true"
                                      android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pickup"

                                    android:textColor="#4a4a4a"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:id="@+id/tv_pickup"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:textColor="#262319"
                                    android:text=""
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/libottom"
                                android:layout_alignParentBottom="true"
                                android:layout_height="wrap_content">


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dropof "
                                    android:textColor="#4a4a4a"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:id="@+id/tv_dropoff"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:textColor="#262319"

                            />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true"

                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:padding="@dimen/_8sdp"
                             android:id="@+id/tv_material"
                            android:textColor="#262319"
                            android:text="Material Type"
                    />







                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginStart="@dimen/_20sdp"
                  android:layout_marginEnd="@dimen/_20sdp"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:id="@+id/linearbottom"
                  android:layout_marginBottom="@dimen/_25sdp"
                  android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/relative_login"
                android:orientation="vertical"

                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"

                    android:id="@+id/relative"
                    android:layout_height="match_parent"
                   >
                <com.ncorti.slidetoact.SlideToActView
                        android:id="@+id/slide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:outer_color="@color/yellow"
                        app:text_size="0sp"
                        app:slider_height="63dp"
                        app:inner_color="@android:color/white"
                        app:slider_locked="false" />


                <com.skydoves.androidribbon.ShimmerRibbonView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:shimmer_ribbon_text="Start Trip"
                        android:id="@+id/ribbon"
                        app:shimmer_ribbon_textSize="10sp"
                        android:alpha="0.8"
                        app:shimmer_base_alpha="1.0"
                        app:shimmer_highlight_alpha="0.5"
                        app:shimmer_ribbon_textColor="@android:color/white"
                        app:shimmer_ribbon_background_color="@android:color/transparent"/>

            </RelativeLayout>

        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="#fc0061"
                android:id="@+id/tv_reject"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/reject"
        />
    </LinearLayout>
</RelativeLayout>