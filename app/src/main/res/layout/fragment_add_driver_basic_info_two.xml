<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_height="match_parent"
>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/tv_partner"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/_20sdp"
                      android:focusableInTouchMode="true"
                      android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:clipToPadding="true"
                    app:cardElevation="3dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"

                    android:id="@+id/driver_photo"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/yellow"

            />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:clipToPadding="true"
                    app:cardElevation="3dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"

                    android:id="@+id/driver_adahar_photo"

                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/yellow"

            />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:clipToPadding="true"
                    app:cardElevation="3dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"

                    android:id="@+id/driver_dl_photo"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/yellow"

            />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:clipToPadding="true"
                    app:cardElevation="3dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"

                    android:id="@+id/driver_current_adress"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/yellow"

            />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_colour_button"
            android:id="@+id/tv_partner"
            android:background="@drawable/square"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/save"
    />

</RelativeLayout>