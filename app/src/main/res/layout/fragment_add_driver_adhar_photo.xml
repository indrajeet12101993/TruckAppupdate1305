<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_width="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:textColor="#e38801"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:id="@+id/tv_attach"

        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="@string/front"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"


        />

        <RelativeLayout android:layout_width="150dp"
                        android:background="@drawable/dashgap"
                        android:layout_gravity="center"
                        android:id="@+id/relative_profile"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_height="150dp">

            <ImageView android:layout_width="70dp"
                       android:layout_centerInParent="true"
                       android:contentDescription="@null"
                       android:id="@+id/iv_logo_for_profile"
                       android:background="@drawable/uploadnoimage"
                       android:layout_height="70dp"/>
            <ImageView android:layout_width="150dp"
                       android:contentDescription="@null"
                       android:id="@+id/iv_profile"
                       android:layout_height="150dp"/>

        </RelativeLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="@string/back_side"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"


        />
        <RelativeLayout android:layout_width="150dp"
                        android:background="@drawable/dashgap"
                        android:layout_gravity="center"
                        android:id="@+id/relative_profile1"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_height="150dp">

            <ImageView android:layout_width="70dp"
                       android:layout_centerInParent="true"
                       android:contentDescription="@null"
                       android:id="@+id/iv_logo_for_profile1"
                       android:background="@drawable/uploadnoimage"
                       android:layout_height="70dp"/>
            <ImageView android:layout_width="150dp"
                       android:contentDescription="@null"
                       android:id="@+id/iv_profile1"
                       android:layout_height="150dp"/>

        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/_25sdp"
                      android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/textcolour"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:id="@+id/et_adaharnumber"
                        android:textColor="@color/textcolour"
                        android:backgroundTint="@color/edittext_line_colour"
                        android:layout_height="wrap_content"
                        android:hint="@string/aaddhar_number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/save"
                      android:background="@drawable/square"
                      android:textSize="20sp"
                      android:id="@+id/tv_next"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:layout_gravity="end"
                      android:layout_margin="@dimen/_10sdp"
                      android:paddingStart="30dp"
                      android:textStyle="bold"
                      android:drawablePadding="2dp"
                      android:textAllCaps="true"
                      android:paddingEnd="28dp"
                      android:textColor="#252525"
                      android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>