<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_height="wrap_content">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tv_basic_info"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_15sdp"
            android:textColor="@color/yellow"
            android:text="@string/basic_info"
    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/tv_basic_info"
            android:layout_centerHorizontal="true"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="@color/toolbar_background_colour"
            android:contentDescription="@string/nav_header_desc"
            android:src="@drawable/ic_truck"
    />
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/tv_partner"
            android:layout_below="@+id/imageView"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"

         >
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:focusableInTouchMode="true"
                      android:layout_height="wrap_content">


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/_12sdp"
                          android:layout_marginStart="@dimen/_20sdp"
                          android:layout_marginEnd="@dimen/_20sdp"
                          android:layout_marginBottom="@dimen/_20sdp"
                          android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_vehicle_brand_name"
                            android:textColor="@color/textcolour"
                            android:hint="@string/vehicale_brand_name"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_vehicle_model"
                            android:textColor="@color/textcolour"
                            android:hint="@string/vehicle_model"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_registor_no"
                            android:textColor="@color/textcolour"
                            android:hint="@string/registor_no"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_colour"
                            android:textColor="@color/textcolour"
                            android:hint="@string/colour"

                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_size"
                            android:textColor="@color/textcolour"
                            android:hint="@string/size"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="none"
                            android:id="@+id/et_capacity"
                            android:textColor="@color/textcolour"
                            android:hint="@string/capacity"
                            android:textIsSelectable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:drawableEnd="@drawable/ic_expand_more_yellow_24dp"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_body_type"
                            android:textColor="@color/textcolour"
                            android:textIsSelectable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:drawableEnd="@drawable/ic_expand_more_yellow_24dp"
                            android:hint="@string/select_body_type"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_select_feild_type"
                            android:textColor="@color/textcolour"
                            android:textIsSelectable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:drawableEnd="@drawable/ic_expand_more_yellow_24dp"
                            android:hint="@string/select_feild_type"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textcolour"
                        app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:id="@+id/et_select_vehicle"
                            android:textColor="@color/textcolour"
                            android:textIsSelectable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:drawableEnd="@drawable/ic_expand_more_yellow_24dp"
                            android:hint="@string/select_vehicle"
                            android:backgroundTint="@color/edittext_line_colour"
                            android:layout_height="wrap_content"
                    />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_colour_button"
            android:id="@+id/tv_partner"
            android:background="@drawable/square"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/next"
    />
    </RelativeLayout>
</RelativeLayout>