<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/registration_background_colour"
        tools:context=".fragment.DashBoardFragment">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">


            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp"
                        android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="vertical"
                                  android:layout_height="wrap_content">



                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_12sdp"
                            android:layout_height="wrap_content">

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:id="@+id/relative1"
                                        android:layout_alignParentStart="true"
                                        android:layout_height="wrap_content">
                            <ImageView android:layout_width="wrap_content"
                                       android:src="@drawable/currentbalance"
                                       android:layout_height="wrap_content"/>
                        </RelativeLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="#656565"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/relative1"
                                android:text="Current Balance"
                        />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#656565"
                                android:textSize="@dimen/_12sdp"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:text="Rs 0.00"
                        />

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_12sdp"
                            android:layout_height="wrap_content">

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:id="@+id/relative2"
                                        android:layout_alignParentStart="true"
                                        android:layout_height="wrap_content">
                            <ImageView android:layout_width="wrap_content"
                                       android:src="@drawable/payments"
                                       android:layout_height="wrap_content"/>
                        </RelativeLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="#656565"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/relative2"
                                android:text="Todays Payments"
                        />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#656565"
                                android:textSize="@dimen/_12sdp"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:text="Rs 0.00"
                        />

                    </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp"
                        android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="vertical"
                                  android:layout_height="wrap_content">



                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"
                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relative3"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/calender"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <LinearLayout android:layout_width="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_marginStart="@dimen/_10sdp"
                                          android:layout_toEndOf="@+id/relative3"
                                          android:layout_height="wrap_content">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="#ff9800"
                                        android:text="Today"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="#656565"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="14 march 2019"
                                />
                            </LinearLayout>



                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="@dimen/_12sdp"
                                    android:drawableEnd="@drawable/ic_expand_more_yellow_24dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"

                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"
                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relativeoperator"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/operatorbill"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <LinearLayout android:layout_width="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_marginStart="@dimen/_10sdp"
                                          android:layout_toEndOf="@+id/relativeoperator"
                                          android:layout_height="wrap_content">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="#656565"
                                        android:text="Operator Bill"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="#9e9e9e"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="Booking"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="#9e9e9e"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="Cash Collected"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_width="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_alignParentEnd="true"
                                          android:layout_height="wrap_content">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#656565"
                                        android:textSize="@dimen/_12sdp"
                                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                        android:text="Rs 0.00"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#9e9e9e"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textSize="@dimen/_10sdp"

                                        android:text="Rs 0.00"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#9e9e9e"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textSize="@dimen/_10sdp"
                                        android:text="Rs 0.00"
                                />

                            </LinearLayout>



                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"


                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relative4"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/cashdeposit"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#656565"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/relative4"
                                    android:text="Cash Deposited"
                            />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="@dimen/_12sdp"
                                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rs 0.00"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"


                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relative5"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/netearning"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#656565"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/relative5"
                                    android:text="Net Earnings"
                            />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="@dimen/_12sdp"
                                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rs 0.00"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"

                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relativebanktransfer"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/banktransfer"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#656565"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/relativebanktransfer"
                                    android:text="Bank Transfer"
                            />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="@dimen/_12sdp"
                                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rs 0.00"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"

                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relativdriver"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/driverperformence"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#656565"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/relativdriver"
                                    android:text="Driver Perfomance"
                            />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="15dp"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rs 0.00"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/_12sdp"

                                android:layout_height="wrap_content">

                            <RelativeLayout android:layout_width="wrap_content"
                                            android:id="@+id/relativcar"
                                            android:layout_alignParentStart="true"
                                            android:layout_height="wrap_content">
                                <ImageView android:layout_width="wrap_content"
                                           android:src="@drawable/carperformence"
                                           android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="#656565"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/relativcar"
                                    android:text="Car Performance"
                            />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#656565"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rs 0.00"
                            />

                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>